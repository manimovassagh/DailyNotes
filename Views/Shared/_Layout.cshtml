<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DailyNotes</title>
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    <!-- Additional Styles -->

</head>
<body class="bg-gray-100 text-gray-800">
<header class="bg-white shadow">
    <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
        <a class="text-xl font-bold text-blue-600 hover:text-blue-800" asp-area="" asp-controller="Home" asp-action="Index">DailyNotes</a>
        <div class="flex items-center space-x-4">
            <a class="text-gray-600 hover:text-gray-800" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <partial name="_LoginPartial"/>
        </div>
    </nav>
</header>

<div class="container mx-auto px-4 py-6">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="bg-gray-800 text-gray-300 py-4 mt-6">
    <div class="container mx-auto px-4 text-center">
        &copy; 2024 - DailyNotes -
        <a class="text-blue-400 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>