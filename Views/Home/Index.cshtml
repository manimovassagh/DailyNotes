@model List<DailyNotes.Models.ReminderModel>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Reminders</h1>
    <a asp-action="NewReminder" asp-controller="Home" class="btn btn-primary">Add New Reminder</a>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Title</th>
        <th>Content</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var reminder in Model)
    {
    <tr>
        <td>@reminder.Title</td>
        <td>@reminder.Content</td>
    </tr>
    }
    </tbody>
</table>